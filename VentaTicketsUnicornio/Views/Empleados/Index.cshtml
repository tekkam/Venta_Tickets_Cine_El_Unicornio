@model IEnumerable<VentaTicketsUnicornio.Models.Empleado>

@{
    ViewBag.Title = "Usuarios/Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--INICIO CARD TIPO PANEL-->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@ViewBag.Title</h5>
    </div>
    <div class="card-body">
        <p class="card-text">

        <p>
            @Html.ActionLink("Guardar Nuevo", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Puesto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puesto)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdEmpleado }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdEmpleado }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.IdEmpleado })
                    </td>
                </tr>
            }

        </table>

        </p>
    </div>
</div>
<!--FIN CARD TIPO PANEL-->