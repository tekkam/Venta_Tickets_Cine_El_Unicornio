@model VentaTicketsUnicornio.Models.Venta

@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--INICIO CARD TIPO PANEL-->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Ticket</h5>
    </div>
    <div class="card-body">
        <p class="card-text">
            <div>
                <h4>Esta seguro de borrar?</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Catalogos.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Catalogos.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fecha)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Asientos)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Asientos)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TipoPago)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TipoPago)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cobrado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cobrado)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Empleado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Empleado)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Borrar" class="btn btn-warning" /> |
                        @Html.ActionLink("Regresar al listado", "Index")
                    </div>
                }
            </div>

        </p>
    </div>
</div>
<!--FIN CARD TIPO PANEL-->