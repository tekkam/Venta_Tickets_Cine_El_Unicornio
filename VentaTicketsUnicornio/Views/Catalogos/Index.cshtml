@model IEnumerable<VentaTicketsUnicornio.Models.Catalogo>

@{
    ViewBag.Title = "Catalogo de Peliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--INICIO CARD TIPO PANEL-->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@ViewBag.Title</h5>
    </div>
    <div class="card-body">
        <p class="card-text">

        <p>
            @Html.ActionLink("Registrar Nueva", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Asientos)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asientos)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdCatalogo }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdCatalogo }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.IdCatalogo })
                    </td>
                </tr>
            }

        </table>

        </p>
    </div>
</div>
<!--FIN CARD TIPO PANEL-->