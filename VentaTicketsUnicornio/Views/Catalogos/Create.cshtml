                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                </div>
    }

            </p>
        </div>
        </div>
        <!--FIN CARD TIPO PANEL-->
        <div>
            @Html.ActionLink("Regresar al listado", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
